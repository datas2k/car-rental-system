<%- include('../app/header') %>
    <h3>Új ügyfél felvétele</h3>
    <hr>
    <style>
        .addcustomer-input {
            font-size: large;
            height: 4ch;
        }
        a {
            font-size: large;
            text-decoration: none;
            font-weight: bold;
            text-shadow: 2px 2px 2px black;
            color: white;
        }
    </style>
    <form action="/addcustomer" method="post">
        <input class="addcustomer-input" type="text" name="name" placeholder="Ügyfél név" required>
        <input class="addcustomer-input" type="number" name="id_number" placeholder="Személyi szám" required>
        <input class="addcustomer-input" type="text" name="address" placeholder="Lakcím" required>
        <input class="addcustomer-input" type="submit" value="Felvesz">
    </form>
    <br>
    <br>
    <a href="/customers">Vissza az ügyfelek listájára...</a>

