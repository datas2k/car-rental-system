<%- include('header') %>
<style>
    .usermod-input {
        font-size: large;
        height: 4ch;
    }
    a {
        font-size: large;
        text-decoration: none;
        font-weight: bold;
        text-shadow: 2px 2px 2px black;
        color: white;
    }
</style>
<form action="/usermod/<%=results[0].id%>" method="post">
    <input class="usermod-input" type="text" name="name" placeholder="Felhasználónév" value="<%= results[0].name %>" required>
    <input class="usermod-input" type="email" name="email" placeholder="E-mail cím" value="<%= results[0].email %>"required>
    <input class="usermod-input" type="password" name="pwd1" placeholder="Jelszó" required>
    <input class="usermod-input" type="password" name="pwd2" placeholder="Jelszó megerősítése" required>
    <input class="usermod-input" type="submit" value="Módosít">
</form>
<br>
<br>
<a href="/users">Vissza a felhasználók listájára...</a>
<%- include('footer') %>
